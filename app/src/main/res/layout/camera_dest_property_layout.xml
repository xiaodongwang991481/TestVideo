<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edit_camera_dest_property_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ems="10"
        android:inputType="text"
        android:text="" />
    <EditText
        android:id="@+id/edit_camera_dest_property_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ems="10"
        android:inputType="text"
        android:text="" />
    <Button
        android:id="@+id/delete_camera_dest_property"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/delete_camera_dest_property" />
</LinearLayout>