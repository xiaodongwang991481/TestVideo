<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_camera_dest_activity"
    tools:context=".CameraDestEditActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edit_camera_dest_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/camera_dest_name"
                    android:inputType="text"
                    android:ems="10"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edit_camera_dest_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/camera_dest_url"
                    android:inputType="text"
                    android:ems="10"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/add_camera_dest_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="@string/add_camera_dest_property" />
                <EditText
            android:id="@+id/add_camera_dest_property_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/camera_dest_property_name"
            android:inputType="text"
            android:ems="10"
            android:text="" />
                <EditText
            android:id="@+id/add_camera_dest_property_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/camera_dest_property_value"
            android:inputType="text"
            android:ems="10"
            android:text="" />
            </LinearLayout>
            <ListView
                android:id="@+id/camera_dest_properties"
                style="@style/Widget.AppCompat.ListView"
                android:padding="2dp"
                android:background="@drawable/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true" />
            <Button
                    android:id="@+id/edit_camera_dest_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save_camera_dest" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>