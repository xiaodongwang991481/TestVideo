<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_camera_activity"
    tools:context=".CameraEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/edit_camera_name_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/camera_name"
        android:labelFor="@+id/edit_camera_name" />

    <EditText
        android:id="@+id/edit_camera_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:inputType="text"
        android:ems="10"
        android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/edit_camera_source_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/camera_source"
        android:labelFor="@+id/edit_camera_source" />

    <EditText
        android:id="@+id/edit_camera_source"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ems="10"
        android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/edit_camera_name_dests_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/camera_dests"
        android:labelFor="@+id/edit_camera_dests" />
    <Button
        android:id="@+id/add_camera_dest"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/add_camera_dest" />
    </LinearLayout>
    <ExpandableListView
        android:id="@+id/edit_camera_dests"
        style="@android:style/Widget.ExpandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:visibility="visible" />

    <Button
        android:id="@+id/edit_camera_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_camera" />

</LinearLayout>